extends layout

block content
  .container(style="margin-top: 40px;")
    .row.align-items-center
      .col-lg-12
        h1.text-center(style="padding-bottom: 20px; border-bottom: 2px solid #ccc;") Art Exhibition

    .row.mt-4.g-4
      .col-md-7
        .event-details-section.mb-4.px-4.py-3.shadow-sm(style="background-color: #2f92ff; border-radius: 10px;")
          h2(style="font-size: 24px; margin-bottom: 20px;") Event Information
          .detail
            span.label.label-primary Date:
            | &nbsp;5th June 2024
          .detail
            span.label.label-primary Start Time:
            | &nbsp;5:00 PM
          .detail
            span.label.label-primary End Time:
            | &nbsp;10:00 PM

        .facilities-section.mt-5.px-4.py-3.shadow-sm(style="background-color: #2f92ff; border-radius: 10px;")
          h2(style="font-size: 24px; margin-bottom: 20px;") Available Facilities
          ul.facility-list
            li(style="margin-bottom: 10px;")
              span.glyphicon.glyphicon-ok-circle.text-success
              | &nbsp;Audio/Visual Equipment
            li(style="margin-bottom: 10px;")
              span.glyphicon.glyphicon-ok-circle.text-success
              | &nbsp;Seating Available
            li(style="margin-bottom: 10px;")
              span.glyphicon.glyphicon-ok-circle.text-success
              | &nbsp;Refreshments Available

      .col-md-5
        .location-map-section.mb-4.px-4.py-3.shadow-sm(style="background-color: #0095ff; border-radius: 10px;")
          h2(style="font-size: 24px; margin-bottom: 20px;") Location Map
           <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3807.2399246703258!2d78.55224057547363!3d17.400269883489116!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bcb992aea591f67%3A0x7e28566ff2b33d80!2sDSL%20Virtue%20Mall!5e0!3m2!1sen!2sin!4v1729087503241!5m2!1sen!2sin" width="350" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
  .row
        .col-xs-12
          .panel.panel-primary.review-panel
            .panel-heading
              a.btn.btn-default.pull-right(href='/location/review/new') Add review
              h2.panel-title Customer reviews
            .panel-body.review-container
              .row
                .review
                  .well.well-sm.review-header
                    span.rating
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
                      span.glyphicon.glyphicon-star
